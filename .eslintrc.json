{
	"extends": "eslint:all",
	"env": {
        "es6": true,
		"node": true
    },
	"x": {"ecmaVersion": 7, "sourceType": "script"},
	"plugins": ["node"],
	"rules": {
		"arrow-parens":                ["warn", "as-needed"],
		"callback-return":             "off",
		"capitalized-comments":        "off",
		"class-methods-use-this":      "off",
		"comma-dangle":                ["warn", "always-multiline"],
		"complexity":                  "off",
		"consistent-return":           "off",
		"curly":                       ["error", "multi-line"],
		"eqeqeq":                      "off",
		"func-name-matching":          ["warn", "never"],
		"func-names":                  ["warn", "never"],
		"func-style":                  [
			"warn", "expression", {"allowArrowFunctions": true}
		],
		"global-require":              "off",
		"id-length":                   "off",
		"indent":                      ["warn", 4],
		"init-declarations":           "off",
		"key-spacing":                 ["warn", {"align": "value"}],
		"linebreak-style":             "off",
		"lines-around-comment":        "off",
		"max-len":                     "off",
		"max-lines":                   "off",
		"max-params":                  "off",
		"max-statements":              "off",
		"multiline-ternary":           "off",
		"new-cap":                     [
			"warn", {
				"capIsNewExceptionPattern": "^\\$\\.",
				"newIsCapExceptions": ["controller"]
			}
		],
		"new-parens":                  "off",
		"newline-after-var":           "off",
		"newline-before-return":       "off",
		"newline-per-chained-call":    "off",
		"no-alert":                    "off",
		"no-confusing-arrow":          "off",
		"no-console":                  "off",
		"no-eq-null":                  "off",
		"no-extra-parens":             "off",
		"no-invalid-this":             "off",
		"no-empty-function":           "off",
		"no-lonely-if":                "off",
		"no-loop-func":                "off",
		"no-magic-numbers":            "off",
		"no-mixed-operators":          "off",
		"no-mixed-spaces-and-tabs":    "off",
		"no-nested-ternary":           "off",
		"no-plusplus":                 "off",
		"no-process-env":              "off",
		"no-restricted-syntax":        ["warn", "WithStatement"],
		"no-tabs":                     "off",
		"no-ternary":                  "off",
		"no-undefined":                "off",
		"no-underscore-dangle":        ["error", { "allowAfterThis": true }],
		"no-void":                     "off",
		"object-curly-newline":        "off",
		"object-property-newline":     "off",
		"one-var":                     ["warn", "never"],
		"operator-linebreak":          ["warn", "before"],
		"padded-blocks":               ["warn", "never"],
		"prefer-arrow-callback":       "off",
		"prefer-template":             "off",
		"quotes": ["error", "single", { "allowTemplateLiterals": true }],
		"quote-props":                 "off",
		"require-jsdoc":               "off",
		"sort-keys":                   "off",
		"space-before-function-paren": ["warn", "never"],
		"space-infix-ops":             "off",
		"space-unary-ops":             ["warn", {"words": true}],
		"valid-jsdoc":                 "off",
		"yield-star-spacing":          [
			"warn", {"before": true, "after": false}
		],
		"yoda":                        "off",

		"node/exports-style":          ["error", "module.exports"],
		"node/no-deprecated-api":      "error",
		"node/no-missing-import":      "off",
		"node/no-missing-require":     "error",
		"node/no-unpublished-bin":     "off",
		"node/no-unpublished-import":  "off",
		"node/no-unpublished-require": "off",
		"node/no-unsupported-features":"off",
		"node/process-exit-as-throw":  "error",
		"node/shebang":                "off"
	}
}
